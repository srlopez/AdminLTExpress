									i.fa.fa-edit
									i.fa.fa-trash-o
							li
								span.handle
									i.fa.fa-ellipsis-v
									i.fa.fa-ellipsis-v
								input(type='checkbox', value='', name='')
								span.text Let theme shine like a star
								small.label.label-success
									i.fa.fa-clock-o
									| 3 days
